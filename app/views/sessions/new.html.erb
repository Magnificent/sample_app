<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
<div id="signinform">
  <p class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email%>
  </p>
  <p class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p class="actions">
    <%= f.submit "Sign in" %><br />
  </p>
  <p>New user? <%= link_to "Sign up now!", signup_path %></p> 
</div>
<% end %>